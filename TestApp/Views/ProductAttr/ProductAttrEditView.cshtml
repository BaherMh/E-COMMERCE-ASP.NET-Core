@model ProductAttrViewModel

@{
    ViewData["Title"] = "ProductAttrEditView";
}

<h1>ProductAttrEditView</h1>

<h4>ProductAttr</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Products,"Id","Price"))">
                    <option value="">
                        Select Product
                    </option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttrId" class="control-label"></label>
                <select asp-for="AttrId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Attributes,"Id","Name"))">
                    <option value="">
                        Select Attribute
                    </option>
                </select>
                <span asp-validation-for="AttrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <select asp-for="UnitId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Units,"Id","Name"))">
                    <option value="">
                        Select Unit
                    </option>
                </select>
                <span asp-validation-for="UnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
