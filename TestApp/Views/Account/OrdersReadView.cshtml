@model List<OrderViewModel>



<h1>Orders</h1>


@{
    ViewData["Title"] = "Index";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pager = ViewBag.Pager;
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
<div class="container-fluid btn-group">
    <div class="col-10">
        @*<h3>@ViewData["Title"]</h3>*@
    </div>
    @*<div class="col-2 justify-content-end">
        <p>
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </p>
    </div>*@
</div>
<br />
<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>


<table class="table">
    <thead>
        <tr>

            <th>
                <i class="@sortModel.GetColumn("OrderDate").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("OrderDate").SortExpression" asp-route-pageSize="@pager.PageSize">
                    Id
                </a>
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
            <th>
                Status
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>



            <td>
                <div class="btn-group">
                    <a asp-controller="Service" asp-action="getStatus" asp-route-id="@item.Id">
                        <span class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </span>
                    </a>

                    @*<a asp-action="Details" asp-route-id="@item.Id">
                    <span class="btn btn-sm btn-outline-dark">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </span>
                </a>


                <button type="button" class="btn-sm btn-outline-danger btn btn-warning" data-toggle="modal" data-target="@("#DeleteCategory-"+item.Id)" data-url="@Url.Action($"Delete/{item.Id}")">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
                @await Html.PartialAsync("CategoryDeleteView", item)*@

                </div>
            </td>



        </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>
